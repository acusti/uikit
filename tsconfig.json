{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": { "@acusti/*": ["packages/*/src"] },
        "sourceMap": true,
        "target": "es2017",

        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "packages/docs",
        "**/dist/*",
        "__tests__",
        "**/*.test*",
        "**/*.spec*"
    ],
    "references": [
        { "path": "packages/css-value-input" },
        { "path": "packages/css-values" },
        { "path": "packages/dropdown" },
        { "path": "packages/input-text" },
        { "path": "packages/matchmaking" },
        { "path": "packages/styling" },
        { "path": "packages/use-bounding-client-rect" },
        { "path": "packages/use-is-out-of-bounds" }
    ]
}
