{
    "name": "@acusti/uikit",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "description": "UI toolkit monorepo containing a React component library, UI utilities, a drag-and-drop library, and more",
    "keywords": [
        "react",
        "react-component",
        "component-library",
        "uikit",
        "toolkit",
        "node",
        "fetch",
        "aws",
        "isomorphic",
        "typescript",
        "ts"
    ],
    "scripts": {
        "build": "yarn workspaces foreach -Rit --from 'packages/*' run build",
        "buildci": "yarn build && yarn lint",
        "builddev": "yarn workspaces foreach -Rit --exclude '@acusti/uikit-docs' --from 'packages/*' run build",
        "dev": "yarn workspace @acusti/uikit-docs storybook",
        "format": "prettier --write eslint.config.js package.json README.md tsconfig.json ./.changeset/ ./packages/ ./packages/docs/.storybook/",
        "lint": "eslint ./packages/*/src/**",
        "lintfix": "eslint ./packages/*/src/** --fix",
        "test": "vitest",
        "tsc": "yarn workspaces foreach -Rp --from 'packages/*' run tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/acusti/uikit.git"
    },
    "author": "andrew patton <andrew@acusti.ca> (https://www.acusti.ca)",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/acusti/uikit/issues"
    },
    "homepage": "https://github.com/acusti/uikit#readme",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "@changesets/cli": "^2.29.4"
    },
    "devDependencies": {
        "@babel/core": "^7.27.1",
        "@eslint/js": "^9.27.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^22.15.21",
        "@types/react": "^19.1.6",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-import-resolver-typescript": "^4.4.1",
        "eslint-plugin-canonical": "^5.1.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-jest-dom": "^5.5.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-perfectionist": "^4.13.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-compiler": "rc",
        "eslint-plugin-react-hooks": "rc",
        "eslint-plugin-testing-library": "^7.2.1",
        "globals": "^16.2.0",
        "happy-dom": "^17.4.7",
        "prettier": "^3.5.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "typescript": "5.8.3",
        "unplugin-dts": "^1.0.0-beta.0",
        "vite": "^6",
        "vitest": "^3.1.4"
    },
    "eslintIgnore": [
        "/node_modules",
        "/build",
        "/public"
    ],
    "prettier": {
        "arrowParens": "always",
        "printWidth": 90,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.css",
                    "*.scss"
                ],
                "options": {
                    "singleQuote": false
                }
            },
            {
                "files": [
                    "*.md",
                    "*.mdx",
                    "*.markdown"
                ],
                "options": {
                    "printWidth": 75,
                    "proseWrap": "always"
                }
            }
        ]
    },
    "packageManager": "yarn@4.9.0",
    "dependenciesMeta": {
        "react-docgen@8.0.0": {
            "unplugged": true
        }
    }
}
