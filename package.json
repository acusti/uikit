{
    "name": "@acusti/uikit",
    "version": "0.0.1",
    "type": "module",
    "description": "UI toolkit monorepo containing a React component library, UI utilities, a drag-and-drop library, and more",
    "scripts": {
        "build:flowtypes": "find . -type f -not -path './node_modules/*' -regex '.*/dist/[^/]*.d.ts' -exec sh -c 'yarn flowgen --add-flow-header --no-inexact $1 -o ${1%.*.*}.js.flow; sed -E -i \"\" \"s/React\\\\.(V?FC|(Void)?FunctionComponent)/React.StatelessFunctionalComponent/g; s/React\\\\.ReactNode/React.Node/g; s/React\\\\.ReactChild/React.Element<any>/g; s/import \\\\{ CSSValueType/import type { CSSValueType/g; s/React\\\\.ChangeEvent/SyntheticInputEvent/g; s/React\\\\.FormEvent/SyntheticEvent/g; s/React\\\\.KeyboardEvent/SyntheticKeyboardEvent/g; s/React\\\\.MouseEvent/SyntheticMouseEvent/g; s/React\\\\.FocusEvent/SyntheticFocusEvent/g;\" ${1%.*.*}.js.flow' _ '{}' \\;",
        "build:stories": "yarn workspace @acusti/uikit-docs build",
        "build:tsc": "tsc --build",
        "build": "run-s format clean build:tsc build:flowtypes",
        "clean:tsc": "tsc --build --clean",
        "clean:flowtypes": "find . -type f -regex './packages/[^/]+/dist/[^/]+.flow' -delete",
        "clean": "run-p 'clean:*'",
        "format": "prettier --write package.json README.md tsconfig.json ./packages/",
        "lint": "eslint ./packages/*/src/**",
        "lintfix": "eslint ./packages/*/src/** --fix",
        "publish": "run-s build publish:all",
        "publish:all": "yarn workspaces foreach --parallel --exclude '@acusti/uikit' npm publish --access public",
        "dev:stories": "yarn workspace @acusti/uikit-docs storybook",
        "dev:watch": "tsc --build --watch",
        "dev": "run-p 'dev:*'",
        "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest --no-cache",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules yarn jest --no-cache --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/acusti/uikit.git"
    },
    "author": "andrew patton <andrew@acusti.ca> (https://www.acusti.ca)",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/acusti/uikit/issues"
    },
    "homepage": "https://github.com/acusti/uikit#readme",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@babel/core": "^7.18.6",
        "@types/jest": "^28.1.4",
        "@types/node": "^18.0.3",
        "@typescript-eslint/eslint-plugin": "^5.30.5",
        "@typescript-eslint/parser": "^5.30.5",
        "babel-eslint": "^10.1.0",
        "eslint": "^8.19.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.5.3",
        "eslint-plugin-jsx-a11y": "^6.6.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-testing-library": "^5.5.1",
        "flowgen": "^1.20.0",
        "jest": "^28.1.2",
        "jest-watch-typeahead": "^1.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "ts-jest": "^28.0.5",
        "typescript": "^4.8.4"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "@acusti/(.*)$": "<rootDir>/packages/$1",
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "watchPlugins": [
            "jest-watch-typeahead/filename",
            "jest-watch-typeahead/testname"
        ]
    },
    "prettier": {
        "arrowParens": "always",
        "printWidth": 90,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.css",
                    "*.scss"
                ],
                "options": {
                    "singleQuote": false
                }
            },
            {
                "files": [
                    "*.md",
                    "*.mdx",
                    "*.markdown"
                ],
                "options": {
                    "printWidth": 75,
                    "proseWrap": "always"
                }
            }
        ]
    },
    "packageManager": "yarn@3.2.4"
}
