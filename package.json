{
    "name": "@acusti/uikit",
    "version": "0.0.1",
    "description": "UI toolkit monorepo containing a React component library, UI utilities, a drag-and-drop library, and more",
    "scripts": {
        "build:cjs": "yarn module:cjs && tsc --build tsconfig.project.json",
        "build:esm": "yarn module:esm && tsc --build tsconfig.project.json",
        "build": "yarn build:cjs && yarn build:esm",
        "dev": "yarn build:esm --watch",
        "format": "prettier --write package.json README.md tsconfig.json tsconfig.project.json ./packages/",
        "module:cjs": "sed -i -e '0,/target/{s:es2017:es5:}' -e '0,/module/{s:esnext:commonjs:}' ./tsconfig.json && sed -i -e s:dist/esm:dist/cjs: packages/**/tsconfig.json",
        "module:esm": "sed -i -e '0,/target/{s:es5:es2017:}' -e '0,/module/{s:commonjs:esnext:}' ./tsconfig.json && sed -i -e s:dist/cjs:dist/esm: packages/**/tsconfig.json",
        "prebuild": "rm -rf ./packages/*/dist",
        "storybook": "yarn workspace @acusti/uikit-docs storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/acusti/uikit.git"
    },
    "author": "andrew@acusti.ca",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/acusti/uikit/issues"
    },
    "homepage": "https://github.com/acusti/uikit#readme",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    },
    "prettier": {
        "arrowParens": "always",
        "printWidth": 90,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.css",
                    "*.scss"
                ],
                "options": {
                    "singleQuote": false
                }
            },
            {
                "files": [
                    "*.md",
                    "*.markdown"
                ],
                "options": {
                    "printWidth": 75,
                    "proseWrap": "always"
                }
            }
        ]
    }
}
