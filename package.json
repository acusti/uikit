{
    "name": "@acusti/uikit",
    "version": "0.0.1",
    "description": "UI toolkit monorepo containing a React component library, UI utilities, a drag-and-drop library, and more",
    "scripts": {
        "build:flowtypes": "find . -type f -not -path './node_modules/*' -regex '.*/dist/[^/]*.d.ts' -exec sh -c 'yarn flowgen --add-flow-header --no-inexact $1 -o ${1%.*.*}.js.flow' _ '{}' \\;",
        "build:stories": "yarn workspace @acusti/uikit-docs build",
        "build:tsc": "tsc --build",
        "build": "run-s clean build:tsc build:flowtypes",
        "clean": "tsc --build --clean",
        "format": "prettier --write package.json README.md tsconfig.json ./packages/",
        "publish": "run-s build publish:all",
        "publish:all": "run-p publish:css-values publish:css-value-input",
        "publish:css-value-input": "yarn workspace @acusti/css-value-input npm publish --access public",
        "publish:css-values": "yarn workspace @acusti/css-values npm publish --access public",
        "start:stories": "yarn workspace @acusti/uikit-docs storybook",
        "start:watch": "tsc --build --watch",
        "start": "run-p 'start:*'",
        "test": "NODE_OPTIONS=--experimental-vm-modules yarn jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/acusti/uikit.git"
    },
    "author": "andrew patton <andrew@acusti.ca> (http://acusti.ca)",
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/acusti/uikit/issues"
    },
    "homepage": "https://github.com/acusti/uikit#readme",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@babel/core": "^7.13.14",
        "@types/jest": "^26.0.22",
        "flowgen": "^1.13.0",
        "jest": "next",
        "jest-runner": "next",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "slash": "^3.0.0",
        "ts-jest": "next",
        "typescript": "^4.2.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "extensionsToTreatAsEsm": [
            ".ts",
            ".tsx"
        ],
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "@acusti/(.*)$": "<rootDir>/packages/$1"
        }
    },
    "prettier": {
        "arrowParens": "always",
        "printWidth": 90,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false,
        "overrides": [
            {
                "files": [
                    "*.css",
                    "*.scss"
                ],
                "options": {
                    "singleQuote": false
                }
            },
            {
                "files": [
                    "*.md",
                    "*.markdown"
                ],
                "options": {
                    "printWidth": 75,
                    "proseWrap": "always"
                }
            }
        ]
    }
}
